{
  "name": "PySpark + Hive + HDFS Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    }
  },
  "postCreateCommand": [
    "git lfs install",
    "java -version",
    "hadoop version",
    "spark-shell --version",
    "hdfs namenode -format -force -nonInteractive",
    "start-dfs.sh"
],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
